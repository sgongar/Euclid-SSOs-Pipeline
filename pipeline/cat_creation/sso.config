[Default]
# No CTI, no CR, no pre/overscans, e_ADU to 3.0, PSF 1x

#exposure to simulate, exposure time and position on the sky (in degrees)
exposures = 1
exptime = 565.0
RA = 145.95
DEC = -38.16

# No random sources - for dithering purposes
#random=no

#quadrant [0,1,2,3] and CCDx/y [0,1,2,3,4,5]
#quadrant = 0
#CCDx = 0
#CCDy = 0

#size of the output image array
xsize = 2048
ysize = 2066
prescanx = 51
ovrscanx = 20

#CCD properties
fullwellcapacity = 200000

#dark noise in electrons per second
dark = 0.001

#readout noise in electrons [default=4.5]
readout = 4.5

#bias level to add in electrons [default=1000]
bias = 1000.0

#background in photoelectrons per second
cosmic_bkgd = 0.182758225257

#electron/ADU conversion factor
e_adu = 3.0

#charge injection level [electrons]
injection = 38000.0

#zero point (electrons / seconds for magnitude zero)
magzero = 15182880871.225231

#input sources
#sourcelist = data/catalog30deg.dat
sourcelist = /pcdisk/holly/sgongora/Documents/Euclid/Euclid-tests/method_creation/Cat_d1_filt.dat

# PSF file
psffile = /pcdisk/holly/sgongora/Documents/Euclid/Euclid-tests/EuclidVisibleInstrument/data/psf4x.fits
psfoversampling = 4

# Other input files
simPath       = /pcdisk/holly/sgongora/Documents/Euclid/Euclid-tests/EuclidVisibleInstrument/
objectsFile   = /pcdisk/holly/sgongora/Documents/Euclid/Euclid-tests/EuclidVisibleInstrument/data/objects.dat
cosmeticsFile = /pcdisk/holly/sgongora/Documents/Euclid/Euclid-tests/EuclidVisibleInstrument/data/cosmetics.dat
flatfieldfile = /pcdisk/holly/sgongora/Documents/Euclid/Euclid-tests/EuclidVisibleInstrument/data/VISFlatField2percent.fits
flatflux      = /pcdisk/holly/sgongora/Documents/Euclid/Euclid-tests/EuclidVisibleInstrument/data/VIScalibrationUnitflux.fits
ghostfile     = /pcdisk/holly/sgongora/Documents/Euclid/Euclid-tests/EuclidVisibleInstrument/data/ghost800nm.fits
cosmicraylengths  = /pcdisk/holly/sgongora/Documents/Euclid/Euclid-tests/EuclidVisibleInstrument/data/cdf_cr_length.dat
cosmicraydistance = /pcdisk/holly/sgongora/Documents/Euclid/Euclid-tests/EuclidVisibleInstrument/data/cdf_cr_total.dat
trapfile          = /pcdisk/holly/sgongora/Documents/Euclid/Euclid-tests/EuclidVisibleInstrument/data/cdm_euclid.dat
parallelTrapfile  = /pcdisk/holly/sgongora/Documents/Euclid/Euclid-tests/EuclidVisibleInstrument/data/cdm_euclid_parallel.dat
serialTrapfile    = /pcdisk/holly/sgongora/Documents/Euclid/Euclid-tests/EuclidVisibleInstrument/data/cdm_euclid_serial.dat

#name of the output file
output = .fits

#Control flags (can be yes/no, true/false, 1/0)
#add sources
addSources = yes

#add noise?
noise = yes

#apply cosmetic defects?
cosmetics = no

#apply charge injection?
chargeInjectionx = no
chargeInjectiony = no

#apply radiation damage model?
radiationDamage = no

#add cosmic rays?
cosmicRays = no

#add over and prescans to the image?
overscans = no

#apply bleeding effect?
bleeding = yes

#apply flatfield, either multiplicative (M) or additive (A)?
flatfieldM = yes
flatfieldA = no
